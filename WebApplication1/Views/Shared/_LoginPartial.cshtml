@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)//(Session["Usuario"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    
    <script>
        var usuario = "@Context.User.Identity.Name";
        var tenanttienda = "@Session["Tienda_Nombre"]";
    </script>

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Usuario", routeValues: null, htmlAttributes: new { title = "Usuarios" })
        </li>
