<html class="no-js" lang="">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <script src="~/Scripts/modernizr-2.8.3-respond-1.4.2.min.js"></script>
    <script src="~/Scripts/AppScripts/CrearProducto.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="~/Scripts/gmaps.js"></script>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customScripts")
    @Scripts.Render("~/bundles/jqueryui-chat")
    @Scripts.Render("~/bundles/signalR")
    <script src="/signalr/hubs"></script>

    @Styles.Render("~/Content/personalizacion/EstiloDos/css")

</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <!-- Banner Header -->
    <div id="banner-wrapper">
        <div id="banner" class="box container">
            <div class="row">
                <div class="7u 12u(medium)">
                    <a href="@Url.Action("Index", "Home")">
                        <h2>Bienvenido a @Session["Tienda_Nombre"].ToString() </h2>
                    </a>
                    <p>@Session["Tienda_Desc"].ToString()</p>
                </div>
                <div class="5u 12u(medium)">
                    <ul>
                        @using Microsoft.AspNet.Identity
                        @if (User.Identity.IsAuthenticated)//(Session["Usuario"] != null)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {

                                <li>
                                    @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Usuario", routeValues: null, htmlAttributes: new { @class = "button big icon fa-arrow-circle-right" })
                                </li>

                                <li>
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="button alt big icon fa-sign-out">Cerrar sesión</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li>
                                @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "button big icon fa-arrow-circle-right" })
                            </li>
                        }
                    </ul>
                </div>
                <section id="searchbar" class="5u 12u(medium)">
                    @Html.Partial("_SearchPartial2")
                </section>
            </div>
        </div>
    </div>

    <!--  Body  -->
    <div id="features-wrapper">
        <div class="container">
            <div class="row fixrow">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer-wrapper">
        <footer id="footer" class="container">
            <div class="row">
                <div class="12u">
                    <div id="copyright">
                        <ul class="menu">
                            <li>&copy; Chebay. Todos los derechos reservados.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>



    @if (Context.User != null && Context.User.Identity.IsAuthenticated)
    {
        <script src="~/Scripts/Chat.js"></script>

    }


    <!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="Scripts/jquery-1.11.2.min.js"><\/script>')</script> -->
    @RenderSection("scripts", required: false)
</body>

</html>
