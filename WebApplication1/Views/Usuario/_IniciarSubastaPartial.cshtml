@{
    ViewBag.Title = "Menu de usuario";
    var categorias = ViewBag.categoriaRaiz;
    var nombreTienda = @Session["Tienda_Nombre"];
}
@*<script src="http://maps.google.com/maps/api/js?sensor=true"></script>
