<section id="seccion-geolocalizacion">
    Geolocalizacion del producto<br />
    <div id="mapa">

    </div>
</section>

<script src="~/Scripts/gmaps.min.js"></script>

<script>
    var map = new GMaps({
        div: '#mapa',
        lat: -34.905510300,
        lng: -56.192056200
    });
    var productId = $('.infoProducto-container').data("key");

    var data = {
        ProductoID: productId
    };

    $.ajax({
        url: '/Product/ObtenerCoordenadas',
        type: 'POST',
        data: data,
        dataType: 'json',
        contentType: 'application/json; charset=UTF-8',
        success: function (data, textStatus, jqxhr) {
            marker = new google.maps.Marker({
                lat: data['coordenadaX'],
                long: data['coordenadaY'],
                map: map
            });
        }
    });

</script>
