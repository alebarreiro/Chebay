<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!--  Header  -->
    <div class="header-container">
        <header class="wrapper clearfix">
            <a href="@Url.Action("Index", "Home")">
                <h1 class="title">@Session["Tienda_Nombre"].ToString()</h1>
            </a>

            <section id="login">
                <nav>
                    <ul>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </nav>
            </section>
            <section id="searchbar">
                <nav>
                    <div class="search-container">
                        <div class="search-line"> </div>
                        <input class="search-input" type="search" placeholder="Buscar" />
                        <ul class="search-drop-list">
                            <li class="search-item">
                                <div class="search-link">
                                    <span> Producto 1</span>
                                </div>
                            </li>
                            <li class="search-item">
                                <div class="search-link">
                                    <span> Producto 2</span>
                                </div>
                            </li>
                            <li class="search-item">
                                <div class="search-link">
                                    <span> Producto 3</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </section>
        </header>
    </div> <!-- #header-container -->
    <!--  Body  -->
    <div class="main-container">
        <div class="main wrapper clearfix">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div> <!-- #main -->
    </div> <!-- #main-container -->
    <!--  Footer  -->
    <div class="footer-container">
        <footer class="wrapper">
            <h3>Chebay - Todos los derechos reservados.</h3>
        </footer>
    </div> <!-- #footer-container-->

    @if (Context.User != null && Context.User.Identity.IsAuthenticated) { 
        @Scripts.Render("~/bundles/Chat")
        
    }


    <!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="Scripts/jquery-1.11.2.min.js"><\/script>')</script> -->
    @RenderSection("scripts", required: false) 
</body>
</html>